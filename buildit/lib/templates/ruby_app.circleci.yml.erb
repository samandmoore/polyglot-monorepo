"<%= app_name %>-test":
  docker:
    - image: circleci/ruby:<%= ruby_version %>-node
      environment:
        RAILS_ENV: test
        RACK_ENV: test
        DATABASE_URL: postgresql://postgres@localhost/<%= app_name %>_test
    - image: circleci/postgres:9.4.12-alpine
  steps:
    - checkout
    - restore-cache:
        keys:
          - v0-<%= app_name %>-deps-{{ checksum "<%= app_name %>/Gemfile.lock" }}
          - v0-<%= app_name %>-deps-
    - run:
        command: |
          cd <%= app_name %>
          bundle install --path vendor/bundle
    - save-cache:
        key: v0-<%= app_name %>-deps-{{ checksum "<%= app_name %>/Gemfile.lock" }}
        paths:
          - <%= app_name %>/vendor/bundle
    - run:
        command: |
          cd <%= app_name %>
          bundle exec rake db:create db:schema:load
    - run:
        command: |
          cd <%= app_name %>
          bundle exec rspec --profile 10 \
                            --format RspecJunitFormatter \
                            --out /tmp/test-results/rspec.xml \
                            --format progress \
                            $(circleci tests glob "spec/**/*_spec.rb" | circleci tests split --split-by=timings)
    - store_test_results:
        path: /tmp/test-results
        destination: test-results

    - store_artifacts:
        path: /tmp/test-results
        destination: test-results

"<%= app_name %>-build":
  docker:
    - image: circleci/ruby:<%= ruby_version %>-node
  steps:
    - checkout
    - restore-cache:
        keys:
          - v0-<%= app_name %>-deps-{{ checksum "<%= app_name %>/Gemfile.lock" }}
          - v0-<%= app_name %>-deps-
    - run:
        command: |
          cd <%= app_name %>
          bundle install --path vendor/bundle
    - save-cache:
        key: v0-<%= app_name %>-deps-{{ checksum "<%= app_name %>/Gemfile.lock" }}
        paths:
          - <%= app_name %>/vendor/bundle
    - run:
        command: |
          tar -z --exclude='.git' -C <%= app_name %> -cf slug.tgz .
